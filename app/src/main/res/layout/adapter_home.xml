<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="2dp"
    android:id="@+id/adapterCON"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/trackArt"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <TextView
            android:id="@+id/trackName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Movie Name"
            android:textStyle="bold"
            app:layout_constraintLeft_toRightOf="@+id/trackArt"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/trackGenre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Genre"
            android:textStyle="bold"
            app:layout_constraintLeft_toRightOf="@+id/trackArt"
            app:layout_constraintTop_toBottomOf="@+id/trackName" />


        <TextView
            android:id="@+id/trackPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Track price"
            app:layout_constraintLeft_toRightOf="@+id/trackArt"
            app:layout_constraintTop_toBottomOf="@+id/trackGenre" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>